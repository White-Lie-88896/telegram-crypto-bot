# ======================
# Telegram Bot Configuration
# ======================
# Your Telegram Bot Token (REQUIRED)
# Get it from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ======================
# Binance API Configuration
# ======================
# Binance API credentials (OPTIONAL for public data)
# Only needed if you want to access private endpoints
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ======================
# Database Configuration
# ======================
# SQLite database path
DATABASE_URL=sqlite+aiosqlite:///./data/crypto_bot.db

# ======================
# Monitor Engine Settings
# ======================
# How often to check monitor tasks (in seconds)
CHECK_INTERVAL=5

# Maximum number of concurrent monitoring tasks
MAX_CONCURRENT_TASKS=100

# ======================
# Logging Configuration
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# ======================
# Rate Limiting
# ======================
# Binance API request limit per minute
BINANCE_REQUEST_LIMIT=1200

# Default cooldown period for alerts (in seconds)
DEFAULT_COOLDOWN=300

# Maximum daily alerts per user
MAX_DAILY_ALERTS=100

# ======================
# Price Reporter Settings
# ======================
# Telegram User/Group ID to receive scheduled price reports (REQUIRED for reports)
# For user: positive number (e.g., 123456789)
# For group: negative number (e.g., -1001234567890)
# You can get your user ID by messaging @userinfobot on Telegram
# Leave empty to disable scheduled price reports
REPORT_USER_ID=

# ======================
# Optional Settings
# ======================
# Enable debug mode (True/False)
DEBUG=False
